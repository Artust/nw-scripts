{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["prettier"],
  "rules": {
    "camelcase": 1,
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-continue": 0,
    "no-underscore-dangle": 0,
    "no-nested-ternary": "warn",
    "no-unused-vars": "warn",
    "no-param-reassign": "warn"
  }
}
