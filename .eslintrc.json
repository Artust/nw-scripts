{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "camelcase": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-continue": 0,
    "no-underscore-dangle": 0,
    "no-nested-ternary": "warn",
    "no-unused-vars": "warn"
  }
}
